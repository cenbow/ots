<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mk.ots.mapper.RoomSaleTypeMapper">
	<resultMap id="tRoomSaleShowConfig" type="com.mk.ots.roomsale.model.TRoomSaleShowConfig">
	    <result property="id" column="id" />
        <result property="promoicon" column="picUrl" />
        <result property="promoid" column="saleTypeId" />
        <result property="promotext" column="saleName" />
	</resultMap>
    <resultMap id="tRoomSaleCity" type="com.mk.ots.roomsale.model.TRoomSaleCity">
        <result property="id" column="id" />
        <result property="saleTypeId" column="saleTypeId" />
        <result property="provinceCode" column="provinceCode" />
        <result property="cityCode" column="cityCode" />
    </resultMap>

    <select id="queryTRoomSaleCity" resultMap="tRoomSaleCity"  parameterType="java.util.Map">
       select
             trsc.*
        FROM
            t_room_sale_city    trsc
        where  trsc.cityCode  =  #{cityCode}
    </select>

    <select id="queryTRoomSaleShowConfigById" resultMap="tRoomSaleShowConfig"  parameterType="java.util.Map">
        select
       trssc.id,trssc.picUrl,trssc.saleTypeId,trssc.saleName
        FROM
        t_room_sale_show_config    trssc
        where  trssc.saleTypeId  =  #{saleTypeId}
        <if test="showArea != null" >
            trssc.showArea = #{showArea}
        </if>
    </select>

</mapper>
